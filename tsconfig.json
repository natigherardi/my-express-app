{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["**/**.test.ts"]
}
